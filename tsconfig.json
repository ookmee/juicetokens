{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "incremental": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@juicetokens/*": ["packages/*/src"]
    }
  },
  "references": [
    { "path": "packages/foundation" },
    { "path": "packages/transport" },
    { "path": "packages/token" },
    { "path": "packages/trust" },
    { "path": "packages/lifecycle" },
    { "path": "packages/extension" },
    { "path": "packages/governance" },
    { "path": "packages/proto" },
    { "path": "packages/common" },
    { "path": "packages/app" }
  ],
  "exclude": ["node_modules", "dist"]
} 